<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2">

    <LinearLayout
        android:id="@+id/top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="38.3dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="32dp"
            android:gravity="center_horizontal"
            android:text="E-HealthCard "
            android:fontFamily="@font/proxima_nova_semibold"
            android:textColor="#333232"
            android:textSize="35sp" />

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_below="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal"
        android:paddingLeft="14.5dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <View
        android:layout_width="5.6dp"
        android:layout_height="match_parent"
        android:background="#38b5f2" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="26dp"
        android:layout_marginRight="54.6dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center_horizontal"
            android:text="Forgot Password"
            android:fontFamily="@font/proxima_nova_semibold"
            android:layout_marginTop="20dp"
            android:textColor="#38b5f2"
            android:textSize="30sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="22.3dp"
            android:text="Email ID"
            android:textColor="#38b5f2"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/email_forgot_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:maxLines="1"
            android:paddingTop="5dp"
            android:textColorHint="#333232"
            android:textSize="20sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="#9e9e9e" />

        <TextView
            android:id="@+id/submit_Button_forpass"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Send"
            android:onClick="forgotPassword"
            android:layout_margin="20dp"
            android:gravity="center"
            android:textColor="#ffffff"
            android:background="@drawable/login_button_bk"
            android:textSize="20sp" />

    </LinearLayout>
    </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_above="@+id/copyright"
        android:gravity="center"
        android:orientation="horizontal">

<!--        <TextView-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_marginLeft="5dp"-->
<!--            android:gravity="center_horizontal"-->
<!--            android:text="Need Help?"-->
<!--            android:textColor="#38b5f2"-->
<!--            android:textSize="17sp" />-->

    </LinearLayout>

    <TextView
        android:id="@+id/copyright"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:text="\u00a9 E-HealthCard"
        android:layout_marginBottom="14dp"
        android:textColor="#333232"
        android:textSize="10sp" />
</RelativeLayout>