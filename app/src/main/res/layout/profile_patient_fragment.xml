<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#f2f2f2">

    <LinearLayout
        android:id="@+id/top1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:textSize="30sp"
            android:textColor="#333232"
            android:layout_marginLeft="30dp"
            />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_below="@+id/top1"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/card_profile"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:layout_margin="20dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">

                    <ImageView
                        android:id="@+id/qr"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_margin="10dp"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/qr"/>

                    <TextView
                        android:id="@+id/downloadQR"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@id/qr"
                        android:layout_marginTop="0dp"
                        android:onClick="downloadQR"
                        android:gravity="center"
                        android:text="Download QR"
                        android:textColor="#000"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:layout_below="@id/downloadQR"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="10dp"
                        android:textSize="20sp"
                        android:textColor="#000" />
                </RelativeLayout>
            </androidx.cardview.widget.CardView>

            <RelativeLayout
                android:layout_below="@id/card_profile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:id="@+id/layout1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:padding="10dp">

                <LinearLayout
                    android:layout_below="@id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left"
                        android:text="Profile Details"
                        android:fontFamily="@font/proxima_nova_semibold"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="10dp"
                        android:textColor="#38b5f2"
                        android:textSize="30sp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="First Name"
                        android:textColor="#38b5f2"
                        android:textSize="15sp" />
                    <TextView
                        android:id="@+id/fname_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:text=""
                        android:textColor="#000"
                        android:paddingLeft="10dp"
                        android:paddingTop="5dp"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="Middle Name"
                        android:textColor="#38b5f2"
                        android:textSize="15sp" />
                    <TextView
                        android:id="@+id/mname_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:text=""
                        android:textColor="#000"
                        android:paddingLeft="10dp"
                        android:paddingTop="5dp"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="Last Name"
                        android:textColor="#38b5f2"
                        android:textSize="15sp" />
                    <TextView
                        android:id="@+id/lname_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:text=""
                        android:textColor="#000"
                        android:paddingLeft="10dp"
                        android:paddingTop="5dp"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="Email ID"
                        android:textColor="#38b5f2"
                        android:textSize="15sp" />
                    <TextView
                        android:id="@+id/email_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:text=""
                        android:textColor="#000"
                        android:paddingLeft="10dp"
                        android:paddingTop="5dp"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="Aadhar Number"
                        android:textColor="#38b5f2"
                        android:textSize="15sp" />
                    <TextView
                        android:id="@+id/aadhar_no_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:text=""
                        android:textColor="#000"
                        android:paddingLeft="10dp"
                        android:paddingTop="5dp"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="Mobile Numeber"
                        android:textColor="#38b5f2"
                        android:textSize="15sp" />
                    <TextView
                        android:id="@+id/mobile_no_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:text=""
                        android:textColor="#000"
                        android:paddingLeft="10dp"
                        android:paddingTop="5dp"
                        android:textSize="20sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="Address"
                        android:textColor="#38b5f2"
                        android:textSize="15sp" />
                    <TextView
                        android:id="@+id/add_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:text=""
                        android:textColor="#000"
                        android:lines="3"
                        android:paddingLeft="10dp"
                        android:paddingTop="5dp"
                        android:textSize="20sp"
                        android:layout_marginBottom="20dp"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/editProfile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_margin="10dp"
                            android:onClick="editPro"
                            android:gravity="center"
                            android:text="Edit Profile"
                            android:textColor="#000"
                            android:textSize="20sp" />
                        <TextView
                            android:id="@+id/changePass"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_margin="10dp"
                            android:gravity="center"
                            android:onClick="cngPass"
                            android:text="Change Password"
                            android:textColor="#000"
                            android:textSize="20sp" />
                        </RelativeLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>